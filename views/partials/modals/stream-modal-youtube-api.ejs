<!-- YouTube API Fields Component -->
<div id="youtubeApiFields" class="hidden space-y-4">
  
  <!-- 1. YouTube Channel Selector -->
  <div id="youtubeChannelSelector">
    <label class="text-sm font-medium text-white block mb-2">
      <i class="ti ti-brand-youtube text-red-500 mr-1"></i>
      YouTube Channel
    </label>
    <div class="relative">
      <select id="youtubeChannelSelect" name="youtubeChannelId" 
        class="w-full px-4 py-2.5 pl-10 bg-dark-700 border border-gray-600 rounded-lg focus:border-primary focus:ring-1 focus:ring-primary appearance-none cursor-pointer text-white">
        <option value="" class="bg-dark-700 text-white">Loading channels...</option>
      </select>
      <i class="ti ti-brand-youtube text-red-500 absolute left-3 top-1/2 -translate-y-1/2"></i>
      <i class="ti ti-chevron-down text-gray-400 absolute right-3 top-1/2 -translate-y-1/2 pointer-events-none"></i>
    </div>
    <p class="text-xs text-gray-400 mt-1">
      Select which YouTube channel to use for this stream. 
      <a href="/oauth2/login" class="text-primary hover:underline">Connect another channel</a>
    </p>
  </div>
  
  <!-- 2. Description Section -->
  <div>
    <div class="flex items-center justify-between mb-2">
      <label class="text-sm font-medium text-white">Description</label>
      <button
        type="button"
        onclick="generateDescriptionWithGemini()"
        class="flex items-center gap-1 px-3 py-1 bg-purple-600 hover:bg-purple-700 text-white rounded text-xs transition-colors"
        title="Generate SEO-optimized description from title"
      >
        <i class="ti ti-sparkles text-sm"></i>
        <span>Generate Description</span>
      </button>
    </div>
    <textarea name="youtubeDescription" id="youtubeDescription" rows="3"
      class="w-full px-4 py-2.5 bg-dark-700 border border-gray-600 rounded-lg focus:border-primary focus:ring-1 focus:ring-primary text-white text-sm"
      placeholder="Stream description (optional - or generate with AI)"></textarea>
  </div>
  
  <!-- 3. Tags Input with Gemini AI -->
  <div>
    <div class="flex items-center justify-between mb-2">
      <label class="text-sm font-medium text-white">
        Tags
        <span class="text-gray-500 text-xs ml-2">(Optional - improves discoverability)</span>
      </label>
      <button
        type="button"
        onclick="generateTagsWithGemini()"
        class="flex items-center gap-1 px-3 py-1 bg-purple-600 hover:bg-purple-700 text-white rounded text-xs transition-colors"
      >
        <i class="ti ti-sparkles text-sm"></i>
        <span>Generate with AI</span>
      </button>
    </div>
    
    <!-- Tags Container -->
    <div id="tagsContainer" class="flex flex-wrap gap-2 p-3 bg-dark-700 border border-gray-600 rounded-lg min-h-[60px]">
      <span class="text-gray-500 text-sm">No tags added yet. Click "Generate with AI" or add manually.</span>
    </div>
    
    <!-- Tag Input -->
    <div class="mt-2 flex gap-2">
      <input
        type="text"
        id="tagInput"
        placeholder="Type a tag and press Enter"
        class="flex-1 px-3 py-2 bg-dark-700 border border-gray-600 rounded-lg focus:border-primary focus:ring-1 focus:ring-primary text-sm text-white"
        onkeypress="handleTagInput(event)"
        maxlength="30"
      />
      <button
        type="button"
        onclick="addTag()"
        class="px-4 py-2 bg-primary hover:bg-blue-600 text-white rounded-lg transition-colors text-sm"
      >
        Add
      </button>
    </div>
    
    <!-- Tag Stats -->
    <div class="mt-2 flex items-center justify-between text-xs">
      <span id="tagCount" class="text-gray-500">0 / 30 tags</span>
      <span id="tagLength" class="text-gray-500">0 / 500 characters</span>
    </div>
    <input type="hidden" id="youtubeTags" name="youtubeTags" value="[]" />
  </div>
  
  <!-- 4. Stream Configuration -->
  <div>
    <label class="text-sm font-medium text-white block mb-2">Stream Configuration</label>
    <div class="space-y-2">
      <div class="relative">
        <input type="text" id="youtubeRtmpUrl"
          class="w-full pl-10 pr-12 py-2.5 bg-dark-700 border border-gray-600 rounded-lg focus:border-primary focus:ring-1 focus:ring-primary text-white text-sm"
          placeholder="RTMP URL">
        <i class="ti ti-link absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
        <button type="button" id="youtubePlatformSelector"
          onclick="togglePlatformDropdown()"
          class="absolute right-2 top-1/2 -translate-y-1/2 w-8 h-8 flex items-center justify-center rounded-full hover:bg-dark-600 transition-colors"
          aria-label="Select platform">
          <i class="ti ti-list-check text-gray-400 hover:text-primary"></i>
        </button>
        
        <!-- Platform Dropdown -->
        <div id="youtubePlatformDropdown"
          class="hidden absolute z-20 right-0 mt-1 w-48 bg-dark-700 rounded-lg border border-gray-600 shadow-xl overflow-hidden">
          <div class="py-1">
            <button type="button" class="youtube-platform-option w-full flex items-center px-4 py-2 hover:bg-dark-600 text-left" data-url="rtmps://a.rtmp.youtube.com/live2">
              <i class="ti ti-brand-youtube text-red-500 text-base mr-2"></i>
              <span class="text-sm text-gray-200">YouTube</span>
            </button>
            <button type="button" class="youtube-platform-option w-full flex items-center px-4 py-2 hover:bg-dark-600 text-left" data-url="rtmps://b.rtmp.youtube.com/live2?backup=1">
              <i class="ti ti-brand-youtube text-red-400 text-base mr-2"></i>
              <span class="text-sm text-gray-200">YouTube (Backup)</span>
            </button>
            <button type="button" class="youtube-platform-option w-full flex items-center px-4 py-2 hover:bg-dark-600 text-left" data-url="rtmps://live-api-s.facebook.com:443/rtmp">
              <i class="ti ti-brand-facebook text-blue-500 text-base mr-2"></i>
              <span class="text-sm text-gray-200">Facebook</span>
            </button>
            <button type="button" class="youtube-platform-option w-full flex items-center px-4 py-2 hover:bg-dark-600 text-left" data-url="rtmps://ingest.global.live.prod.tiktok.com/live">
              <i class="ti ti-brand-tiktok text-white text-base mr-2"></i>
              <span class="text-sm text-gray-200">TikTok</span>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- 5. Stream Key Section -->
  <div>
    <label class="text-sm font-medium text-white block mb-2">Stream Key</label>
    <div class="flex gap-2">
      <div class="relative flex-1">
        <input type="password" id="youtubeStreamKey"
          class="w-full px-4 py-2.5 pl-10 pr-12 bg-dark-700 border border-gray-600 rounded-lg focus:border-primary focus:ring-1 focus:ring-primary font-mono text-sm text-white"
          placeholder="Enter stream key or load from channel">
        <input type="hidden" id="youtubeStreamId" value="">
        <i class="ti ti-key text-gray-500 absolute left-3 top-1/2 -translate-y-1/2"></i>
        <button type="button" onclick="toggleYouTubeStreamKeyVisibility()"
          class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-400 hover:text-white transition-colors">
          <i class="ti ti-eye" id="youtubeStreamKeyToggle"></i>
        </button>
      </div>
      <button type="button" onclick="toggleYouTubeStreamKeysDropdown()"
        class="flex items-center gap-2 px-4 py-2.5 bg-primary hover:bg-blue-600 text-white rounded-lg transition-colors whitespace-nowrap">
        <i class="ti ti-download text-sm"></i>
        <span>Load</span>
      </button>
    </div>
    
    <!-- Dropdown for Stream Keys -->
    <div id="youtubeStreamKeysDropdown" class="hidden mt-2 bg-dark-700 border border-gray-600 rounded-lg shadow-lg overflow-hidden">
      <div class="p-2">
        <div class="flex items-center justify-between mb-2 px-2 pb-2 border-b border-gray-600">
          <div class="flex items-center gap-2">
            <span class="text-xs font-medium text-gray-300">Available Stream Keys</span>
            <span id="streamKeysCount" class="text-xs text-gray-500"></span>
          </div>
          <div class="flex items-center gap-2">
            <button type="button" onclick="refreshYouTubeStreamKeys()"
              class="p-1 text-gray-400 hover:text-primary transition-colors rounded hover:bg-gray-600">
              <i class="ti ti-refresh text-sm"></i>
            </button>
            <button type="button" onclick="toggleYouTubeStreamKeysDropdown()"
              class="p-1 text-gray-400 hover:text-white transition-colors rounded hover:bg-gray-600">
              <i class="ti ti-x text-sm"></i>
            </button>
          </div>
        </div>
        <div id="youtubeStreamKeysList" class="max-h-64 overflow-y-auto space-y-1">
          <div class="text-center py-4 text-gray-400">
            <i class="ti ti-loader animate-spin text-xl mb-2"></i>
            <p class="text-xs">Fetching stream keys...</p>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- 6. Additional Settings Toggle -->
  <div class="border-t border-gray-700 pt-3">
    <button type="button" onclick="toggleYouTubeAdditionalSettings()"
      class="flex items-center justify-between w-full px-2 py-2 hover:bg-dark-700/30 rounded transition-colors group">
      <span class="text-sm font-medium text-white group-hover:text-primary transition-colors">
        <i class="ti ti-settings mr-1.5"></i>Additional Settings (Optional)
      </span>
      <i class="ti ti-chevron-down text-gray-400 transition-transform duration-200" id="youtubeAdditionalSettingsIcon"></i>
    </button>
    
    <div id="youtubeAdditionalSettings" class="hidden mt-4 space-y-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="text-sm font-medium text-white block mb-2">Privacy</label>
          <select name="youtubePrivacy" id="youtubePrivacy"
            class="w-full px-4 py-2.5 bg-dark-700 border border-gray-600 rounded-lg focus:border-primary focus:ring-1 focus:ring-primary text-sm text-white">
            <option value="public">Public</option>
            <option value="unlisted" selected>Unlisted</option>
            <option value="private">Private</option>
          </select>
        </div>
      </div>
      
      <!-- Thumbnail Upload -->
      <div class="border border-yellow-500/30 bg-yellow-500/5 rounded-lg p-4">
        <div class="flex items-center gap-2 mb-3">
          <i class="ti ti-photo text-yellow-500 text-lg"></i>
          <label class="text-sm font-medium text-white">
            YouTube Thumbnail
            <span class="text-yellow-500 ml-1">‚≠ê Recommended</span>
          </label>
        </div>
        <p class="text-xs text-gray-400 mb-3 leading-relaxed">
          <i class="ti ti-info-circle mr-1"></i>
          Upload custom thumbnail for this stream (16:9 ratio, min 1280x720px).
        </p>
        <input type="file" name="youtubeThumbnail" id="youtubeThumbnail" accept="image/*" onchange="previewYoutubeThumbnail(this)"
          class="w-full px-4 py-2.5 bg-dark-700 border border-gray-600 rounded-lg focus:border-primary file:mr-4 file:py-1.5 file:px-3 file:border-0 file:text-xs file:bg-dark-600 file:text-gray-200 file:rounded text-sm text-gray-400 cursor-pointer hover:border-primary transition-colors">
        
        <!-- Thumbnail Preview -->
        <div id="youtubeThumbnailPreview" class="hidden mt-4">
          <div class="relative inline-block">
            <img id="youtubeThumbnailImg" src="" alt="Thumbnail preview" class="w-48 aspect-video object-cover rounded border border-gray-600 shadow-lg">
            <button type="button" onclick="clearYoutubeThumbnail()" class="absolute -top-2 -right-2 w-6 h-6 bg-red-500 hover:bg-red-600 rounded-full flex items-center justify-center text-white shadow-lg transition-colors">
              <i class="ti ti-x text-sm"></i>
            </button>
          </div>
        </div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="text-sm font-medium text-white block mb-2">Made for Kids</label>
          <div class="flex items-center gap-6 pt-1">
            <label class="flex items-center gap-2 text-sm text-gray-300 cursor-pointer">
              <input type="radio" name="youtubeMadeForKids" value="yes" class="w-4 h-4 text-primary focus:ring-primary bg-dark-700 border-gray-600">
              <span>Yes</span>
            </label>
            <label class="flex items-center gap-2 text-sm text-gray-300 cursor-pointer">
              <input type="radio" name="youtubeMadeForKids" value="no" checked class="w-4 h-4 text-primary focus:ring-primary bg-dark-700 border-gray-600">
              <span>No</span>
            </label>
          </div>
        </div>
        
        <div>
          <label class="text-sm font-medium text-white block mb-2">Age Restriction</label>
          <label class="flex items-center gap-2 text-sm text-gray-300 cursor-pointer pt-1">
            <input type="checkbox" name="youtubeAgeRestricted" id="youtubeAgeRestricted" class="w-4 h-4 rounded text-primary focus:ring-primary bg-dark-700 border-gray-600">
            <span>Age-restricted (18+)</span>
          </label>
        </div>
        
        <div class="md:col-span-2 border-t border-gray-700 pt-3 mt-1">
          <label class="text-sm font-medium text-white block mb-2">Konten Sintetis (AI)</label>
          <label class="flex items-start gap-3 text-sm text-gray-300 cursor-pointer pt-1">
            <input type="checkbox" name="youtubeSyntheticContent" id="youtubeSyntheticContent" class="w-4 h-4 mt-0.5 rounded text-primary focus:ring-primary bg-dark-700 border-gray-600">
            <div class="flex flex-col">
              <span>Konten dibuat atau dimodifikasi dengan AI</span>
              <span class="text-xs text-gray-500 mt-1">Sesuai kebijakan YouTube, beritahu penonton jika konten terlihat realistis namun dibuat secara digital.</span>
            </div>
          </label>
        </div>
      </div>
    </div>
  </div>

