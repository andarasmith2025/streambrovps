<!-- Modal Footer Component -->
<!-- Parameters: formId, cancelFunction, submitButtonText -->
<div class="flex-shrink-0 px-4 py-3 border-t border-gray-700 bg-dark-800 rounded-b-lg sticky bottom-0">
  <div class="flex items-center justify-end gap-3 w-full">
    <button type="button" onclick="<%= cancelFunction %>()"
      class="px-4 py-2.5 text-sm font-medium bg-dark-700 hover:bg-dark-600 text-white rounded-lg transition-colors">
      Cancel
    </button>
    <button type="submit" form="<%= formId %>"
      class="px-4 py-2.5 text-sm font-medium bg-primary hover:bg-blue-600 text-white rounded-lg transition-colors">
      <%= submitButtonText %>
    </button>
  </div>
</div>
