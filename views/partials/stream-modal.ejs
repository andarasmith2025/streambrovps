<!-- Create New Stream Modal -->
<div id="newStreamModal" class="fixed inset-0 bg-black/50 z-50 hidden modal-overlay flex items-center justify-center p-2 md:p-4">
  <div class="w-full max-w-2xl">
    <div class="bg-dark-800 rounded-lg shadow-xl w-full modal-container max-h-[95vh] md:max-h-[92vh] flex flex-col relative">
      
      <!-- Header -->
      <div class="flex-shrink-0">
        <%- include('./stream-modal-header') %>
      </div>
      
      <!-- Tab Switcher -->
      <div class="flex-shrink-0">
        <%- include('./stream-modal-tabs') %>
      </div>
      
      <!-- Stream Mode -->
      <div class="flex-shrink-0">
        <%- include('./stream-modal-mode') %>
      </div>
      
      <!-- Scrollable Content -->
      <div class="flex-1 overflow-y-auto">
        <form id="newStreamForm" class="px-4 pt-3 pb-3 space-y-3">
          <input type="hidden" id="selectedVideoId" name="videoId" value="">
          
          <!-- Form Fields -->
          <%- include('./stream-modal-fields') %>
          
        </form>
      </div>
      
      <!-- Footer -->
      <div class="flex-shrink-0">
        <%- include('./stream-modal-footer') %>
      </div>
      
      <!-- Scroll to Top Button -->
      <button type="button" id="scrollToTopBtn" onclick="scrollModalToTop('newStreamModal')"
        class="hidden absolute bottom-20 right-4 md:right-6 w-11 h-11 bg-primary hover:bg-blue-600 text-white rounded-full shadow-lg transition-all z-20 flex items-center justify-center"
        title="Scroll to top">
        <i class="ti ti-arrow-up text-lg"></i>
      </button>
      
    </div>
  </div>
</div>
