  <script>
    document.addEventListener('DOMContentLoaded', function() {
      if (document.fonts && document.fonts.ready) {
        document.fonts.ready.then(function() {
          document.querySelectorAll('.ti').forEach(function(icon) {
            icon.classList.add('font-loaded');
          });
        });
      } else {
        setTimeout(function() {
          document.querySelectorAll('.ti').forEach(function(icon) {
            icon.classList.add('font-loaded');
          });
        }, 100);
      }
      
      const observer = new MutationObserver(function(mutations) {
        mutations.forEach(function(mutation) {
          mutation.addedNodes.forEach(function(node) {
            if (node.nodeType === 1) {
              const icons = node.querySelectorAll ? node.querySelectorAll('.ti') : [];
              icons.forEach(function(icon) {
                if (document.fonts && document.fonts.check && document.fonts.check('1em tabler-icons')) {
                  icon.classList.add('font-loaded');
                } else {
                  setTimeout(function() {
                    icon.classList.add('font-loaded');
                  }, 100);
                }
              });
            }
          });
        });
      });
      
      observer.observe(document.body, {
         childList: true,
         subtree: true
       });
     });

     // SERVICE WORKER COMPLETELY DISABLED
     // File sw.js has been deleted to prevent caching issues
     if ('serviceWorker' in navigator) {
       // Force unregister any existing service workers
       navigator.serviceWorker.getRegistrations().then(function(registrations) {
         registrations.forEach(function(registration) {
           registration.unregister();
         });
       });
       
       // Clear all caches
       if ('caches' in window) {
         caches.keys().then(function(names) {
           names.forEach(function(name) {
             caches.delete(name);
           });
         });
       }
     }
   </script>
