              <option value="unlisted" selected>Unlisted</option>
              <option value="private">Private</option>
            </select>
          </div>
          <div>
            <label class="text-sm text-gray-300 block mb-1">Start Time</label>
            <input type="datetime-local" name="scheduledStart" required class="w-full h-[40px] px-3 bg-dark-700 border border-gray-600 rounded">
          </div>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
          <div>
            <label class="text-sm text-gray-300 block mb-1">Use Existing Stream Key</label>
            <select id="ytStreamSelect" name="streamId" class="w-full h-[40px] px-3 bg-dark-700 border border-gray-600 rounded">
              <option value="">Create new stream key</option>
            </select>
          </div>
          <div>
            <label class="text-sm text-gray-300 block mb-1">Thumbnail</label>
            <input id="ytThumbFile" name="thumbnail" type="file" accept="image/*" class="w-full h-[40px] px-3 bg-dark-700 border border-gray-600 rounded file:mr-4 file:py-2 file:px-3 file:border-0 file:text-sm file:bg-dark-600 file:text-gray-200">
          </div>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
          <label class="inline-flex items-center gap-2 text-sm text-gray-300 h-[40px]"><input type="checkbox" name="autoStart"> Auto Start</label>
          <label class="inline-flex items-center gap-2 text-sm text-gray-300 h-[40px]"><input type="checkbox" name="autoStop"> Auto End</label>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
