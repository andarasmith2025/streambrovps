  // YouTube helpers in global scope
  window.openScheduleYouTubeModal = function(){
    const m = document.getElementById('ytScheduleModal');
    if (m){ m.classList.remove('hidden'); m.classList.add('flex'); }
    try {
      const sel = document.getElementById('ytStreamSelect');
      if (sel && !sel.dataset.loaded) {
        fetch('/youtube/api/streams').then(r=>r.json()).then(d=>{
          const items = (d && d.items) || [];
          items.forEach(it => {
            const opt = document.createElement('option');
            opt.value = it.id;
            opt.textContent = it.title || it.id;
            sel.appendChild(opt);
          });
          sel.dataset.loaded = '1';
        }).catch(()=>{});
      }
    } catch {}
  }
  window.closeScheduleYouTubeModal = function(){
    const m = document.getElementById('ytScheduleModal');
    if (m){ m.classList.add('hidden'); m.classList.remove('flex'); }
  }
  window.postScheduleLive = async function(payload){
    const res = await fetch('/youtube/schedule-live', { method:'POST', headers:{'Content-Type':'application/json'}, body: JSON.stringify(payload)});
    const data = await res.json();
    if (!res.ok) throw new Error(data.error || 'Failed');
    return data;
  }
  window.toast = function(msg, type){
    const div = document.createElement('div');
    div.className = 'fixed top-4 right-4 z-50 px-4 py-3 rounded-lg border text-sm ' + (type==='success' ? 'bg-green-500/10 border-green-600/30 text-green-300' : 'bg-red-500/10 border-red-600/30 text-red-300');
    div.textContent = msg; document.body.appendChild(div); setTimeout(()=>div.remove(), 3500);
  }

  // Bind modal form submit
  document.addEventListener('DOMContentLoaded', function(){
    const form = document.getElementById('ytScheduleForm');
    if (!form) return;
    form.addEventListener('submit', async function(e){
      e.preventDefault();
      const fd = new FormData(form);
      const title = fd.get('title');
      let description = fd.get('description') || '';
      const privacyStatus = fd.get('privacyStatus') || 'unlisted';
      const local = fd.get('scheduledStart');
      const scheduledStartTime = new Date(local).toISOString();
      const streamId = (fd.get('streamId') || '').trim() || undefined;
      const thumbFile = (document.getElementById('ytThumbFile') || {}).files?.[0] || null;
      const enableAutoStart = !!fd.get('autoStart');
      const enableAutoStop = !!fd.get('autoStop');
      const selfDeclaredMadeForKids = (fd.get('madeForKids') || 'no') === 'yes';
      const ageRestricted = !!fd.get('ageRestricted');
      try {
        const resp = await window.postScheduleLive({ title, description, privacyStatus, scheduledStartTime, streamId, enableAutoStart, enableAutoStop });
        const broadcastId = resp && resp.broadcast && resp.broadcast.id;
        if (broadcastId && thumbFile) {
          const tfd = new FormData();
          tfd.append('file', thumbFile);
          await fetch(`/youtube/broadcasts/${broadcastId}/thumbnail`, { method: 'POST', body: tfd });
        }
        if (broadcastId) {
          await fetch(`/youtube/broadcasts/${broadcastId}/audience`, { method:'POST', headers:{'Content-Type':'application/json'}, body: JSON.stringify({ selfDeclaredMadeForKids, ageRestricted })});
        }
        window.toast('YouTube live scheduled successfully', 'success');
        window.closeScheduleYouTubeModal();
      } catch (err) {
        window.toast('Failed to schedule live: ' + (err.message || 'Unknown'), 'error');
      }
    });
  });
</script>
