<% layout('layout') -%>

<div class="flex flex-col md:flex-row md:items-center justify-between mb-6 gap-4">
  <div>
    <h2 class="text-2xl font-bold">YouTube Schedule Live</h2>
    <p class="text-gray-400 text-sm mt-1">Create and manage YouTube live broadcasts with full metadata control</p>
  </div>
  <button onclick="openNewBroadcastModal()" class="flex items-center gap-2 bg-primary hover:bg-blue-600 text-white px-4 py-2 rounded-lg transition-colors whitespace-nowrap">
    <i class="ti ti-plus"></i>
    <span>New Broadcast</span>
  </button>
</div>

<!-- Broadcasts List -->
<div class="bg-gray-800 rounded-lg overflow-hidden">
  <div class="overflow-x-auto">
    <table class="w-full">
      <thead class="bg-dark-700 border-b border-gray-700">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Broadcast</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Video</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Stream Key</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Scheduled</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Status</th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-400 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody id="broadcastsTableBody" class="divide-y divide-gray-700">
        <!-- Loading state -->
        <tr id="loadingState">
          <td colspan="6" class="px-6 py-8 text-center">
            <i class="ti ti-loader animate-spin text-2xl text-gray-400"></i>
            <p class="text-gray-400 mt-2">Loading broadcasts...</p>
          </td>
        </tr>
        <!-- Empty state -->
        <tr id="emptyState" class="hidden">
          <td colspan="6" class="px-6 py-12 text-center">
            <i class="ti ti-calendar-off text-4xl text-gray-600 mb-2"></i>
            <p class="text-gray-400 font-medium mb-2">No broadcasts found</p>
            <p class="text-gray-500">Create your first YouTube live broadcast using the button above</p>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<!-- New/Edit Broadcast Modal -->
<div id="broadcastModal" class="fixed inset-0 bg-black/50 hidden items-center justify-center overflow-y-auto p-4" style="z-index: 9999;">
  <div class="flex min-h-full items-center justify-center">
    <div class="bg-dark-800 rounded-lg shadow-xl w-full max-w-2xl relative" style="z-index: 10000;">
      <div class="flex items-center justify-between px-6 py-4 border-b border-gray-700">
        <h3 id="modalTitle" class="text-lg font-semibold">Create YouTube Live Broadcast</h3>
        <button onclick="closeBroadcastModal()" class="text-gray-400 hover:text-white transition-colors">
          <i class="ti ti-x text-xl"></i>
        </button>
      </div>
      
      <form id="broadcastForm" class="p-6 space-y-4">
        <input type="hidden" id="broadcastId" name="broadcastId">
        
        <!-- Video Selection -->
        <div>
          <label class="block text-sm font-medium text-gray-300 mb-2">Video Source *</label>
          <button type="button" onclick="toggleVideoSelector()" 
            class="w-full px-4 py-2 bg-dark-700 border border-gray-600 rounded-lg text-left flex items-center justify-between hover:border-primary transition-colors">
            <span id="selectedVideoText" class="text-gray-400">Choose a video...</span>
            <i class="ti ti-chevron-down"></i>
          </button>
          <input type="hidden" id="selectedVideoId" name="videoId">
          
          <!-- Video Dropdown -->
          <div id="videoDropdown" class="hidden mt-2 bg-dark-700 border border-gray-600 rounded-lg max-h-60 overflow-y-auto">
            <div class="p-2">
              <input type="text" id="videoSearch" placeholder="Search videos..." 
                class="w-full px-3 py-2 bg-dark-800 border border-gray-600 rounded text-sm focus:border-primary">
            </div>
            <div id="videoList" class="divide-y divide-gray-600">
              <!-- Videos will be loaded here -->
            </div>
          </div>
        </div>

        <!-- Title -->
        <div>
          <label class="block text-sm font-medium text-gray-300 mb-2">Title *</label>
          <input type="text" name="title" id="broadcastTitle" required 
            class="w-full px-4 py-2 bg-dark-700 border border-gray-600 rounded-lg focus:border-primary focus:ring-1 focus:ring-primary"
            placeholder="My Live Stream">
        </div>

        <!-- Description -->
        <div>
          <label class="block text-sm font-medium text-gray-300 mb-2">Description</label>
          <textarea name="description" id="broadcastDescription" rows="3"
            class="w-full px-4 py-2 bg-dark-700 border border-gray-600 rounded-lg focus:border-primary focus:ring-1 focus:ring-primary"
            placeholder="Stream description..."></textarea>
        </div>

        <!-- Row: Privacy & Scheduled Time -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">Privacy *</label>
            <select name="privacyStatus" id="broadcastPrivacy" required
              class="w-full px-4 py-2 bg-dark-700 border border-gray-600 rounded-lg focus:border-primary focus:ring-1 focus:ring-primary">
              <option value="public">Public</option>
              <option value="unlisted" selected>Unlisted</option>
              <option value="private">Private</option>
            </select>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">Scheduled Time *</label>
            <input type="datetime-local" name="scheduledStartTime" id="broadcastScheduledTime" required
              class="w-full px-4 py-2 bg-dark-700 border border-gray-600 rounded-lg focus:border-primary focus:ring-1 focus:ring-primary [color-scheme:dark]">
          </div>
        </div>

        <!-- Thumbnail -->
        <div>
          <label class="block text-sm font-medium text-gray-300 mb-2">Thumbnail</label>
          <input type="file" name="thumbnail" id="broadcastThumbnail" accept="image/*"
            class="w-full px-4 py-2 bg-dark-700 border border-gray-600 rounded-lg focus:border-primary file:mr-4 file:py-2 file:px-4 file:border-0 file:text-sm file:bg-dark-600 file:text-gray-200 file:rounded">
          <p class="text-xs text-gray-500 mt-1">Recommended: 1280x720px, max 2MB</p>
        </div>

        <!-- Row: Auto Start & Auto Stop -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <label class="flex items-center gap-2 text-sm text-gray-300 cursor-pointer">
            <input type="checkbox" name="enableAutoStart" id="broadcastAutoStart" class="w-4 h-4 rounded border-gray-600 text-primary focus:ring-primary focus:ring-offset-0 bg-dark-700">
            <span>Auto Start</span>
          </label>
          <label class="flex items-center gap-2 text-sm text-gray-300 cursor-pointer">
            <input type="checkbox" name="enableAutoStop" id="broadcastAutoStop" class="w-4 h-4 rounded border-gray-600 text-primary focus:ring-primary focus:ring-offset-0 bg-dark-700">
            <span>Auto Stop</span>
          </label>
        </div>

        <!-- Row: Made for Kids & Age Restriction -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">Made for Kids</label>
            <div class="flex items-center gap-4">
              <label class="flex items-center gap-2 text-sm text-gray-300 cursor-pointer">
                <input type="radio" name="madeForKids" value="yes" class="w-4 h-4 border-gray-600 text-primary focus:ring-primary focus:ring-offset-0 bg-dark-700">
                <span>Yes</span>
              </label>
              <label class="flex items-center gap-2 text-sm text-gray-300 cursor-pointer">
                <input type="radio" name="madeForKids" value="no" checked class="w-4 h-4 border-gray-600 text-primary focus:ring-primary focus:ring-offset-0 bg-dark-700">
                <span>No</span>
              </label>
            </div>
          </div>
          <div>
            <label class="flex items-center gap-2 text-sm text-gray-300 cursor-pointer mt-7">
              <input type="checkbox" name="ageRestricted" id="broadcastAgeRestricted" class="w-4 h-4 rounded border-gray-600 text-primary focus:ring-primary focus:ring-offset-0 bg-dark-700">
              <span>Age-restricted (18+)</span>
            </label>
          </div>
        </div>

        <!-- Stream Key Info (shown after creation) -->
        <div id="streamKeyInfo" class="hidden p-4 bg-dark-700 rounded-lg border border-gray-600">
          <div class="flex items-center justify-between mb-2">
            <label class="text-sm font-medium text-gray-300">Stream Key</label>
            <button type="button" onclick="copyStreamKey()" class="text-xs text-primary hover:text-blue-400">
              <i class="ti ti-copy"></i> Copy
            </button>
          </div>
          <code id="streamKeyDisplay" class="block text-xs text-gray-400 bg-dark-800 p-2 rounded break-all"></code>
          <p class="text-xs text-gray-500 mt-2">RTMP URL: <span id="rtmpUrlDisplay" class="text-gray-400"></span></p>
        </div>
      </form>

      <div class="flex items-center justify-end gap-3 px-6 py-4 border-t border-gray-700">
        <button onclick="closeBroadcastModal()" class="px-4 py-2 text-gray-300 hover:text-white transition-colors">
          Cancel
        </button>
        <button type="submit" form="broadcastForm" id="submitButton" class="px-4 py-2 bg-primary hover:bg-blue-600 text-white rounded-lg transition-colors">
          Create Broadcast
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Change Thumbnail Modal -->
<div id="thumbnailModal" class="fixed inset-0 bg-black/50 z-50 hidden items-center justify-center p-4">
  <div class="bg-dark-800 rounded-lg shadow-xl w-full max-w-md">
    <div class="flex items-center justify-between px-6 py-4 border-b border-gray-700">
      <h3 class="text-lg font-semibold">Change Thumbnail</h3>
      <button onclick="closeThumbnailModal()" class="text-gray-400 hover:text-white transition-colors">
        <i class="ti ti-x text-xl"></i>
      </button>
    </div>
    
    <form id="thumbnailForm" class="p-6">
      <input type="hidden" id="thumbnailBroadcastId">
      <div>
        <label class="block text-sm font-medium text-gray-300 mb-2">New Thumbnail</label>
        <input type="file" name="thumbnail" accept="image/*" required
          class="w-full px-4 py-2 bg-dark-700 border border-gray-600 rounded-lg focus:border-primary file:mr-4 file:py-2 file:px-4 file:border-0 file:text-sm file:bg-dark-600 file:text-gray-200 file:rounded">
        <p class="text-xs text-gray-500 mt-1">Recommended: 1280x720px, max 2MB</p>
      </div>
    </form>

    <div class="flex items-center justify-end gap-3 px-6 py-4 border-t border-gray-700">
      <button onclick="closeThumbnailModal()" class="px-4 py-2 text-gray-300 hover:text-white transition-colors">
        Cancel
      </button>
      <button type="submit" form="thumbnailForm" class="px-4 py-2 bg-primary hover:bg-blue-600 text-white rounded-lg transition-colors">
        Upload
      </button>
    </div>
  </div>
</div>

<script src="/js/youtube-schedule.js"></script>
