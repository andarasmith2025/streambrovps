PORT=7575

# Stream Limits Configuration
# Maximum number of concurrent streams per user (default: 5)
MAX_CONCURRENT_STREAMS_PER_USER=5

# Maximum number of concurrent streams globally across all users (default: 20)
MAX_CONCURRENT_STREAMS_GLOBAL=20

# Force Kill Configuration
# Timeout in milliseconds before force killing unresponsive streams (default: 5000)
FORCE_KILL_TIMEOUT_MS=5000

# Resource Monitoring Configuration
# CPU usage percentage threshold for warnings (default: 80)
RESOURCE_WARNING_CPU_PERCENT=80

# Memory usage in MB threshold for warnings (default: 500)
RESOURCE_WARNING_MEMORY_MB=500

# Resource monitoring interval in milliseconds (default: 30000)
RESOURCE_MONITOR_INTERVAL_MS=30000

# Hardware Encoding Configuration
# Prefer hardware encoding when available (default: true)
# Set to false to always use software encoding
PREFER_HARDWARE_ENCODING=true

# Allow fallback to software encoding if hardware encoder fails (default: true)
HARDWARE_ENCODER_FALLBACK=true